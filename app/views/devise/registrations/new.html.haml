%h2 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
  = f.error_notification
  -#= display_base_errors resource
  -#.form-group
  -#  = f.input :name, :input_html => {class: "form-control"} ,:autofocus => true
  .form-group
    = f.input :email, :input_html => {class: "form-control"}, :required => true
  .form-group
    = f.input :password, :input_html => {class: "form-control"}, :required => true
  .form-group
    = f.input :password_confirmation, :input_html => {class: "form-control"}, :required => true
  .form-group
    = f.button :submit, '註冊', class: "btn btn-primary"
= render "devise/shared/links"

